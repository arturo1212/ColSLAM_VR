
# PAra levantar visison sin display
docker run -it -v $HOME/ColSLAM_VR/robot_pictures:/photos  --network robotnet --rm --privileged colslam:vision bash

# Para levantar vision con display
docker run -it --env="DISPLAY" --volume="$HOME/.Xauthority:/root/.Xauthority:rw" -v $HOME/Documents/ColSLAM_VR/robot_pictures:/photos  --network robotnet --rm --privileged colslam:vision bash

#Para levantar rosnodes
# DEPRECADO docker ruun -it --device=/dev/ttyAACM0 -p 9090:9090 ros:tesis
docker run --rm -dit --name rosnodes --network robotnet -p 9090:9090 --privileged colslam:rosnodes

